@page
@model DysFin.Pages.Administracja.Uzytkownicy.EditModel

@{
    Layout = "_LayoutPanel";
    ViewData["Title"] = "Użytkownik - edycja";
}
<div class="page-buttons">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <!--<a class="page-back" href="#"><</a>-->
                <h2 class="page-subtitle">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 page-content">
            <div class="box-section">
                <h3 class="bs-header">Dane</h3>
                <form method="post">
                    <div class="bs-content">
                        <div class="form-section">
                            <div class="row">
                                <div class="col-md-8">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Uzytkownik.Id" />
                                    <div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.Imie" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input asp-for="Uzytkownik.Imie" class="text-input" />
                                            <span asp-validation-for="Uzytkownik.Imie" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.Nazwisko" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input asp-for="Uzytkownik.Nazwisko" class="text-input" />
                                            <span asp-validation-for="Uzytkownik.Nazwisko" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.Login" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input asp-for="Uzytkownik.Login" class="text-input" />
                                            <span asp-validation-for="Uzytkownik.Login" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.PoziomUzytkownika" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <select asp-for="Uzytkownik.PoziomUzytkownikaId" class="text-input" asp-items="ViewBag.PoziomUzytkownikaId"></select>
                                            <span asp-validation-for="Uzytkownik.PoziomUzytkownikaId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.Status" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <select asp-for="Uzytkownik.Status" class="text-input">
                                                <option value="true">Aktywny</option>
                                                <option value="false">Wygaszony</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.Telefon" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input asp-for="Uzytkownik.Telefon" class="text-input" />
                                            <span asp-validation-for="Uzytkownik.Telefon" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.Email" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input asp-for="Uzytkownik.Email" class="text-input" />
                                            <span asp-validation-for="Uzytkownik.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @*<div class="form-row row">
                                        <div class="col-sm-2 col-md-2">
                                            <label asp-for="Uzytkownik.Jednostka" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <select asp-for="Uzytkownik.JednostkaId" class="text-input" asp-items="ViewBag.JednostkaId"></select>
                                            <span asp-validation-for="Uzytkownik.JednostkaId" class="text-danger"></span>
                                        </div>
                                    </div>*@
                                </div>
                            </div>
                            <div class="form-row row">
                                <div class="col-sm-2 col-md-2">
                                    <label asp-for="Uzytkownik.Komorka" class="input-label"></label>
                                </div>
                                <div class="col-sm-5 col-md-5 col-lg-5">
                                    <select asp-for="Uzytkownik.KomorkaId" class="text-input" asp-items="ViewBag.KomorkaId"></select>
                                    <span asp-validation-for="Uzytkownik.KomorkaId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bs-footer">
                        <div class="form-row">
                            <input class="btn btn-default pull-right" type="submit" value="Zapisz" />
                            <a asp-page="./Index" class="pull-right">Powrót do listy</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
