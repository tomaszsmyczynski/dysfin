@page
@model DysFin.Pages.Kontrole.EditModel

@{
    ViewData["Title"] = "Kontrola zewnętrzna - edycja";
}
<div class="page-buttons">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <!--<a class="page-back" href="#"><</a>-->
                <h2 class="page-subtitle">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 page-content">

            <div class="page-intro">
                <p>@Html.DisplayNameFor(model => model.Kontrola.TypKontroli): <strong>@Html.DisplayFor(model => model.Kontrola.TypKontroli.Nazwa)</strong></p>
                <p>@Html.DisplayNameFor(model => model.Kontrola.Numer): <strong>@Html.DisplayFor(model => model.Kontrola.Numer)</strong></p>
                <p>@Html.DisplayNameFor(model => model.Kontrola.DataWpisu): <strong>@Html.DisplayFor(model => model.Kontrola.DataWpisu)</strong></p>
            </div>

            <div class="box-section">
                <h3 class="bs-header">Dane</h3>

                <form method="post">
                    <div class="bs-content">
                        <div class="form-section">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-md-4">
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            @Html.DisplayNameFor(model => model.Kontrola.JednostkaKontrolowana):
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <strong>
                                                @if (Model.Kontrola.JednostkaKontrolowana == null)
                                                {
                                                    @Html.Raw("Urząd Miasta")
                                                }
                                                else
                                                {
                                                    @Html.DisplayFor(model => model.Kontrola.JednostkaKontrolowana.Nazwa)
                                                }
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            @Html.DisplayNameFor(model => model.Kontrola.JednostkaKontrolujaca):
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <strong>@Html.DisplayFor(model => model.Kontrola.JednostkaKontrolujaca.Nazwa)</strong>
                                        </div>
                                    </div>
                                    @if (Model.Kontrola.TypKontroliId == 1)
                                    {
                                        <div class="form-row row">
                                            <div class="col-sm-4 col-md-4">
                                                @Html.DisplayNameFor(model => model.Kontrola.KomorkaWiodaca):
                                            </div>
                                            <div class="col-sm-8 col-md-8 col-lg-8">
                                                <strong>@Html.DisplayFor(model => model.Kontrola.KomorkaWiodaca.Nazwa)</strong>
                                            </div>
                                        </div>
                                        <div class="form-row row">
                                            <div class="col-sm-4 col-md-4">
                                                @Html.DisplayNameFor(model => model.Kontrola.KomorkiUczestniczace):
                                            </div>
                                            <ol class="col-sm-8 col-md-8 col-lg-8">

                                                @foreach (var kontrolaKomorki in Model.Kontrola.KomorkiUczestniczace)
                                                {

                                                    <li><strong>@Html.Raw(kontrolaKomorki.Komorka.Nazwa)</strong></li>

                                                }

                                            </ol>
                                        </div>
                                    }
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.Kontroler" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <textarea asp-for="Kontrola.Kontroler" class="text-input"></textarea>
                                            <span asp-validation-for="Kontrola.Kontroler" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            @Html.DisplayNameFor(model => model.Kontrola.Procesy):
                                        </div>
                                        <ol class="col-sm-8 col-md-8 col-lg-8">
                                            @foreach (var kontrolaProces in Model.Kontrola.Procesy)
                                            {
                                                <li>@Html.Raw(kontrolaProces.Proces.Nazwa)</li>
                                            }
                                        </ol>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <input type="hidden" asp-for="Kontrola.Id" />
                                    <input type="hidden" asp-for="Kontrola.Lp" />
                                    <input type="hidden" asp-for="Kontrola.Rok" />
                                    <input type="hidden" asp-for="Kontrola.ZnakWiodacy" />
                                    <input type="hidden" asp-for="Kontrola.DataWpisu" />
                                    <input type="hidden" asp-for="Kontrola.JednostkaKontrolujacaId" />
                                    <input type="hidden" asp-for="Kontrola.JednostkaKontrolowanaId" />
                                    <input type="hidden" asp-for="Kontrola.KomorkaWiodacaId" />
                                    <input type="hidden" asp-for="Kontrola.TypKontroliId" />

                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.DataUpowaznienia" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input type="text" asp-for="Kontrola.DataUpowaznienia" asp-format="{0:d}" class="text-input input-xxs datepicker" />
                                            <span asp-validation-for="Kontrola.DataUpowaznienia" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.NumerUpowaznienia" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input asp-for="Kontrola.NumerUpowaznienia" class="text-input input-long" />
                                            <span asp-validation-for="Kontrola.NumerUpowaznienia" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.Temat" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <textarea asp-for="Kontrola.Temat" class="text-input"></textarea>
                                            <span asp-validation-for="Kontrola.Temat" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.DataRozpoczecia" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input type="text" asp-for="Kontrola.DataRozpoczecia" asp-format="{0:d}" class="text-input input-xxs datepicker" />
                                            <span asp-validation-for="Kontrola.DataRozpoczecia" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.DataZakonczenia" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input type="text" asp-for="Kontrola.DataZakonczenia" asp-format="{0:d}" class="text-input input-xxs datepicker" />
                                            <span asp-validation-for="Kontrola.DataZakonczenia" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.OkresOd" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input type="text" asp-for="Kontrola.OkresOd" asp-format="{0:d}" class="text-input input-xxs datepicker" />
                                            <span asp-validation-for="Kontrola.OkresOd" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.OkresDo" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <input type="text" asp-for="Kontrola.OkresDo" asp-format="{0:d}" class="text-input input-xxs datepicker" />
                                            <span asp-validation-for="Kontrola.OkresDo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label class="input-label text-right">Dotyczy</label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <div class="checkbox-inline">
                                                <label>
                                                    <input asp-for="Kontrola.SprawyKadrowe" />
                                                    @Html.DisplayNameFor(model => model.Kontrola.SprawyKadrowe)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <div class="checkbox-inline">
                                                <label>
                                                    <input asp-for="Kontrola.FunduszeUE" />
                                                    @Html.DisplayNameFor(model => model.Kontrola.FunduszeUE)
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row row">
                                        <div class="col-sm-4 col-md-4">
                                            <label asp-for="Kontrola.Status" class="input-label"></label>
                                        </div>
                                        <div class="col-sm-8 col-md-8 col-lg-8">
                                            <select asp-for="Kontrola.StatusId" asp-items="ViewBag.StatusId" class="text-input input-xs"></select>
                                            <span asp-validation-for="Kontrola.StatusId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- .form-section -->

                        <div class="form-section">
                            <div class="row">
                                <div class="col-md-10">
                                    <h4>@Html.DisplayNameFor(model => model.Kontrola.Zalaczniki)</h4>
                                    <h6>Załączniki mogą usuwać wyłącznie administratorzy w Biurze Kontroli</h6>
                                </div>
                                <div class="col-md-2">
                                    <a asp-page="./Zalaczniki" asp-route-id="@Model.Kontrola.Id" asp-route-edit="true" class="btn pull-right">Dodaj załączniki</a>
                                </div>
                            </div>
                            <hr />

                            <div class="table-responsive">
                                <table class="table table-style-2">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Kontrola.Zalaczniki.ElementAt(0).Nazwa)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Kontrola.Zalaczniki.ElementAt(0).Opis)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Kontrola.Zalaczniki.ElementAt(0).Data)
                                            </th>
                                            <th>Akcja</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Kontrola.Zalaczniki)
                                        {
                                            <tr class=@(Model.Kontrola.Zalaczniki.ToList().IndexOf(item) % 2 == 0? "" : "tr-odd")>
                                                <td>@item.Nazwa</td>
                                                <td>@item.Opis</td>
                                                <td>@item.Data.ToShortDateString()</td>
                                                <td>
                                                    @{var role = User.Claims.FirstOrDefault(u => u.Type.EndsWith("role")).Value; }
                                                    @if (role == "2")
                                                    {
                                                        <a class="btn btn-xs" asp-page="./Zalaczniki" asp-page-handler="Delete" asp-route-id="@item.Id" asp-route-kontrolaId="@Model.Kontrola.Id"><i class="fa fa-trash"></i> Usuń</a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="form-section">
                            <div class="row">
                                <div class="col-md-10">
                                    <h4>@Html.DisplayNameFor(model => model.Kontrola.Nieprawidlowosci)</h4>
                                </div>
                                <div class="col-md-2">
                                    <a asp-page="./Nieprawidlowosci" asp-route-id="@Model.Kontrola.Id" asp-route-edit="true" class="btn pull-right">Dodaj nieprawidłowości</a>
                                </div>
                            </div>
                            <hr />

                            <div class="table-responsive">
                                <table class="table table-style-2">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Kontrola.Nieprawidlowosci.ElementAt(0).Opis)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Kontrola.Nieprawidlowosci.ElementAt(0).OpisPlanowanychDzialan)
                                            </th>
                                            <th style="min-width: 120px;">
                                                @Html.DisplayNameFor(model => model.Kontrola.Nieprawidlowosci.ElementAt(0).PlanowanaData)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Kontrola.Nieprawidlowosci.ElementAt(0).OpisZrealizowanychDzialan)
                                            </th>
                                            <th style="min-width: 120px;">
                                                @Html.DisplayNameFor(model => model.Kontrola.Nieprawidlowosci.ElementAt(0).DataZakonczeniaDzialan)
                                            </th>
                                            <th style="min-width: 165px;">Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Kontrola.Nieprawidlowosci)
                                        {
                                            <tr class=@(Model.Kontrola.Nieprawidlowosci.ToList().IndexOf(item) % 2 == 0? "" : "tr-odd")>
                                                <td>@item.Opis</td>
                                                <td>@item.OpisPlanowanychDzialan</td>
                                                <td>@item.PlanowanaData.ToShortDateString()</td>
                                                <td>@item.OpisZrealizowanychDzialan</td>
                                                @if (item.DataZakonczeniaDzialan.HasValue)
                                                {
                                                    <td>@item.DataZakonczeniaDzialan.Value.ToShortDateString()</td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }
                                                <td>
                                                    <a class="btn btn-xs" asp-page="./NieprawidlowosciChange" asp-route-id="@item.Id"><i class="fa fa-edit"></i> Edytuj</a>
                                                    @if (Model.Kontrola.Nieprawidlowosci.Count == 1)
                                                    {
                                                        <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Kontrola w statusie Działania naprawcze musi mieć nieprawidłowości/zalecenia">
                                                            <a class="btn btn-xs" style="pointer-events: none;"><i class="fa fa-trash"></i> Usuń</a>
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-xs" asp-page="./Nieprawidlowosci" asp-page-handler="Delete" asp-route-id="@item.Id" asp-route-kontrolaId="@Model.Kontrola.Id"><i class="fa fa-trash"></i> Usuń</a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="form-section">

                                <h4>Uwagi</h4>
                                <hr />

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-row row">
                                            <div class="col-sm-4 col-md-4">
                                                <label asp-for="Kontrola.Uwagi" class="input-label"></label>
                                            </div>
                                            <div class="col-sm-8 col-md-8 col-lg-8">
                                                <textarea asp-for="Kontrola.Uwagi" class="text-input"></textarea>
                                                <span asp-validation-for="Kontrola.Uwagi" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    @if (User.Claims.FirstOrDefault(u => u.Type == "komorka").Value == "39")
                                    {
                                        <div class="col-md-8">
                                            <div class="form-row row">
                                                <div class="col-sm-4 col-md-4">
                                                    <label asp-for="Kontrola.UwagiKW" class="input-label"></label>
                                                </div>
                                                <div class="col-sm-8 col-md-8 col-lg-8">
                                                    <textarea asp-for="Kontrola.UwagiKW" class="text-input"></textarea>
                                                    <span asp-validation-for="Kontrola.UwagiKW" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bs-footer">
                        <div class="form-row">
                            <input class="btn btn-default pull-right" type="submit" value="Zapisz" />
                            <a asp-page="./Index" class="pull-right">Powrót do listy</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
